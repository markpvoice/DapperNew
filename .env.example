# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dappersquad"

# Next.js
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"

# Email Configuration
# FROM_EMAIL: The email address that emails will be sent from
FROM_EMAIL="noreply@yourdomain.com"

# VERIFIED_EMAIL: For Resend development mode, this should be your verified email address
# In production, this can be the same as FROM_EMAIL if domain is verified
VERIFIED_EMAIL="your-verified-email@gmail.com"

# Stripe Payment Processing
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key_here"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# Admin Configuration
ADMIN_EMAIL="admin@dappersquad.com"
ADMIN_PASSWORD_HASH="$2b$10$your_hashed_admin_password_here"

# JWT Secret for Authentication
JWT_SECRET="your-jwt-secret-key-here"

# File Upload (Optional - for future use)
UPLOADTHING_SECRET="your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Development/Production Environment
NODE_ENV="development"

# Rate Limiting Configuration
# ENABLE_RATE_LIMIT: Controls rate limiting behavior
#   - "true": Enforce rate limits (blocks requests when exceeded)
#   - "log": Log-only mode (evaluates but never blocks, useful for monitoring)
#   - "false" or any other value: Disabled (no rate limiting applied)
ENABLE_RATE_LIMIT="true"

# Optional: Database configuration for testing
# TEST_DATABASE_URL: Separate database for integration tests (if needed)
# TEST_DATABASE_URL="postgresql://test:test@localhost:5432/dappersquad_test"